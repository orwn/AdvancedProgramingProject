
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.advancedprograming.orwn.ex1.SplashActivity"
    android:id="@+id/launcher"
    android:background="@drawable/splash_background">
    >


    <!--TODO: currect the image height to be 3/4 of the screen size-->
    <ImageView
        android:id="@+id/bazinga_imgview"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:maxWidth="300dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"


        android:src ="@drawable/bazinga"/>


    <ProgressBar
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/splash_progressBar"
        android:progressDrawable="@drawable/progressbar"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_below="@id/bazinga_imgview"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        style="@android:style/Widget.ProgressBar.Horizontal"
        />

    <TextView
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/splash_text"
        android:layout_above="@+id/bazinga_imgview"
        android:layout_centerHorizontal="true" />



</RelativeLayout>
